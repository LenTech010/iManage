# ==========================================================
# WARNING: This is a development configuration example
# ==========================================================
# For production use:
# - Change all passwords to strong, unique values
# - Use proper secrets management
# - Enable HTTPS
# - Review all security settings
# ==========================================================

# Database Configuration
DB_NAME=imanage
DB_USER=imanage
# WARNING: Change this password! Default is for development only
DB_PASSWORD=imanage

# Django Superuser Configuration
# WARNING: These credentials provide full administrative access
# Change to strong passwords before using in any non-local environment
DJANGO_SUPERUSER_USERNAME=admin
DJANGO_SUPERUSER_PASSWORD=admin
DJANGO_SUPERUSER_EMAIL=admin@localhost

# Site Configuration
SITE_URL=http://localhost:8000
TIME_ZONE=UTC
LANGUAGE_CODE=en

# Mail Configuration
MAIL_FROM=noreply@localhost

# Debug Mode (set to False for production)
DEBUG=True
